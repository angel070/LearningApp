@model Learning.Models.TopicViewModel

@{
    ViewBag.Title = "Index";
}

<h2>List of Topics</h2>
<hr />
<p style="margin-left:950px">
    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#myModal"><i class="fa fa-plus"></i>Add Topic</button>
</p>
<table class="table table-bordered table-striped" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TopicCreate.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicCreate.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicCreate.subtopic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicCreate.CourseId)
            </th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model.TopicIndex)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subtopic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>

        }
    </tbody>
</table>

