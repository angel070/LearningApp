@model Learning.Models.NotesViewModel

@{
    ViewBag.Title = "Index";
}
<h2>List of Notes</h2>
<hr />
<p style="margin-left:940px">
    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#myModal"><i class="fa fa-plus"></i>Add Notes</button>
</p>
<table class="table table-bordered table-" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotesCreate.Topic.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotesCreate.Note)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NotesIndex)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a href="~/Notes/Edit/@item.Id" class="btn btn-outline-dark text-primary"><i class="fas fa-pencil-alt"></i></a> |
                    <a href="~/Notes/Delete/@item.Id" class="btn btn-outline-dark text-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Notes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @Html.Partial("Create",Model.NotesCreate)
            </div>
            <div class="modal-footer">
               
                <a href="#" class="btn btn-outline-primary"><i class="fa fa-plus"></i>Add Notes</a>
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scrip{
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}
